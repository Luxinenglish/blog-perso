---
import Link from '@/components/Link.astro'
import { Badge } from '@/components/ui/badge'
import { formatDate } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  project: CollectionEntry<'write_up'>
}

const { WriteUp } = Astro.props
---

<div
  class="hover:bg-secondary/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out"
>
  <Link
    href={WriteUp.data.link}
    class="flex flex-col gap-4 sm:flex-row"
    external
  >
    {
      WriteUp.data.image && (
        <div class="w-full sm:max-w-3xs sm:shrink-0">
          <Image
            src={WriteUp.data.image}
            alt={WriteUp.data.name}
            width={1200}
            height={630}
            class="object-cover"
          />
        </div>
      )
    }
    <div class="grow">
      <h3 class="mb-1 text-lg font-medium">
        {WriteUp.data.name}
      </h3>
      <p class="text-muted-foreground mb-2 text-sm">
        {WriteUp.data.description}
      </p>
      {
        WriteUp.data.startDate && (
          <p class="text-muted-foreground/70 mb-2 flex items-center gap-x-1.5 text-xs">
            <span class="flex items-center gap-x-1.5">
              <Icon name="lucide:calendar" class="size-3" />
              <span>
                {formatDate(WriteUp.data.startDate)}
                {WriteUp.data.endDate
                  ? ` → ${formatDate(WriteUp.data.endDate)}`
                  : ' → Present'}
              </span>
            </span>
          </p>
        )
      }
      {
        WriteUp.data.tags && (
          <div class="flex flex-wrap gap-2">
            {WriteUp.data.tags.map((tag: string) => (
              <Badge variant="secondary">{tag}</Badge>
            ))}
          </div>
        )
      }
    </div>
  </Link>
</div>
